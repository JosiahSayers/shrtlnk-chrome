{
  "name": "shrtlnk",
  "version": "1.0",
  "description": "Quickly create shortened URLs!",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background/postUrl.js",
      "background/contextMenu.js",
      "background/notifications.js",
      "background/storage.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/view-links/view-links.html",
    "default_icon": {
      "16": "images/icons/icon16.png",
      "32": "images/icons/icon32.png",
      "48": "images/icons/icon48.png",
      "180": "images/icons/icon180.png",
      "192": "images/icons/icon192.png",
      "512": "images/icons/icon512.png"
    }
  },
  "permissions": [
    "contextMenus",
    "https://shrtlnk.dev/",
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "images/icons/icon16.png",
    "32": "images/icons/icon32.png",
    "48": "images/icons/icon48.png",
    "180": "images/icons/icon180.png",
    "192": "images/icons/icon192.png",
    "512": "images/icons/icon512.png"
  }
}