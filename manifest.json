{
  "name": "shrtlnk",
  "version": "1.0",
  "description": "Quickly create shortened URLs!",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background/postUrl.js",
      "background/contextMenu.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/pasteUrl.html"
  },
  "permissions": [
    "contextMenus",
    "https://shrtlnk.dev/"
  ]
}